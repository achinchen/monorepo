datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Gender {
  Female
  Male
  Null
}

enum Family {
  Cat
  Dog
}

enum Size {
  Small
  Medium
  Large
}

model AnimalFollow {
  id        Int      @id @default(autoincrement())
  animal    Animal   @relation(fields: [animalId], references: [id])
  animalId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  count     Int      @default(1)
}

model Animal {
  id        Int            @id
  code      String
  size      Size
  color     String
  family    Family
  gender    Gender
  imageUrl  String
  location  String
  address   String
  tel       String
  note      String
  openAt    DateTime?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  follows   AnimalFollow[]
}
