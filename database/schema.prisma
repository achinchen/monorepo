datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

enum Gender {
  Female
  Male
  Null
}

enum Family {
  Cat
  Dog
}

enum Size {
  Small
  Medium
  Large
}

model User {
  id      Int      @id @default(autoincrement())
  uuid    Int
  tel     String
  follows Follow[]
}

model Follow {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  animal    Animal   @relation(fields: [animalId], references: [id])
  animalId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Animal {
  id        Int       @id
  code      String
  size      Size
  color     String
  family    Family
  gender    Gender
  imageUrl  String
  location  String
  address   String
  tel       String
  note      String
  openAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  follows   Follow[]
}
